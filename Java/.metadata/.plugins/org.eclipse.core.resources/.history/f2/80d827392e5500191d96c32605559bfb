package renderers;

import javax.swing.*;

public class Window {
	
	JFrame frame;
	JLabel title;
	
	public Window(int width, int height) {
		frame = new JFrame();
		frame.setSize(width, height);
		frame.setLayout(null);
		
		initComponenets(width, height);
		add();
	}
	
	private void initComponents(int width, int height) {
		title = new JLabel();
		title.setText("Lắc là lắc là lắc là lắc, bầu cua là bầu cua");
		title.setLocation(width / 2, height / 2);
	}
	
	private void add() {
		frame.add(title);
	}
	
	public void show() {
		frame.setVisible(true);
	}
	
	public void finalize() {
	}

}
